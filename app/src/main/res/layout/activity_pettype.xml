<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.administrator.pethouse.module.user.pettainer.ui.pettypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7">

        <ImageView
            android:id="@+id/Get_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@mipmap/back_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="宠物类型"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pet_type">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="输入宠物品种查询" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/search" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/TabLayout_pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/mpettypelist"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/mpettypemm"
            android:background="#ffff" />

        <TextView
            android:id="@+id/mpettypemm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mpettypecar"
            android:background="#F0F1F5"
            android:paddingLeft="20dp"
            android:text="M" />

        <TextView
            android:id="@+id/mpettypecar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mpettyperemen"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/shape_pet_type"
            android:gravity="center"
            android:padding="10dp"
            android:text="猫--老黑"
            android:textColor="#636363"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mpettyperemen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#F0F1F5"
            android:padding="10dp"
            android:text="热门宠物" />

        <com.example.administrator.pethouse.views.SideBar
            android:id="@+id/mpettypesweachlist"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mpettyperemen" />
    </RelativeLayout>
</LinearLayout>
