                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/shuttleImg"
                    android:layout_toRightOf="@+id/shuttleImg"
                    android:text="接送"
                    android:textColor="#484848"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:text="请输入价格"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />

                <EditText
                    android:id="@+id/shuttlePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView13"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_toLeftOf="@+id/textView13"
                    android:layout_toStartOf="@+id/textView13"
                    android:background="@null"
                    android:hint="0" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:text="元/天"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginLeft="15sp"
                android:background="#F0F1F5"
                android:gravity="center_vertical"
                android:text="寄养师介绍" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15sp"
                    android:layout_marginStart="15sp"
                    android:text="我的昵称"
                    android:textColor="#484848"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView"
                    android:layout_marginLeft="38dp"
                    android:layout_marginStart="38dp"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:background="@null"
                    android:hint="请输入昵称" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1sp"
                android:background="#F0F1F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="15sp"
                    android:text="我的介绍"
                    android:textColor="#484848"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/myIntroduction"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/identity_photo_fillet" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginLeft="15sp"
                android:background="#F0F1F5"
                android:gravity="center_vertical"
                android:text="上传照片" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="15sp"
                    android:src="@mipmap/add_photos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="35sp"
                    android:text="上传1张寄养师本人正面居家照（宠物店上传营业执照）审核备案不公开"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#F0F1F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:text="上传展示照片，不少于3张环境照，必须包括宠物室内及室外活动区（其他照片展示不限）"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/photo1"
                        android:layout_width="80sp"

                        android:layout_height="80sp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="15sp"
                        android:src="@mipmap/add_photos" />

                    <ImageView
                        android:id="@+id/photo2"
                        android:layout_width="80sp"
                        android:layout_height="80sp"

                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="15sp"
                        android:src="@mipmap/add_photos"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/photo3"
                        android:layout_width="80sp"
                        android:layout_height="80sp"

                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="15sp"
                        android:src="@mipmap/add_photos"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/photo4"
                        android:layout_width="80sp"
                        android:layout_height="80sp"

                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="15sp"
                        android:src="@mipmap/add_photos"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/agreement_Img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="20sp"
                        android:button="@drawable/agreement_button"
                        android:checked="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="20sp"
                        android:text="同意" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:text="《双方寄养服务协议》"
                        android:textColor="#FF8A63" />
                </LinearLayout>

                <Button
                    android:id="@+id/determine_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/button"
                    android:text="确  定" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>